<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.login.repository.IUserMapper">

<resultMap id="UserMap" type="com.example.login.vo.UserVO">
	<result property="id" column="id"/>
	<result property="password" column="password"/>
	<result property="name" column="name"/>
	<result property="sessionId" column="session_id"/>
	<result property="limitDate" column="limit_date"/>
</resultMap>


	<insert id="insert">
		insert into login_user(id,password,name)
		values(#{id},#{password},#{name});
	</insert>
	
	<select id="checkId" resultType="int">
		select count(*)
		from login_user
		where id=#{id};
	</select>
	
	<delete id="delete">
		delete from login_user
		where id = #{id};
	</delete>
	
	<select id="getUser" resultMap="UserMap">
		select *
		from login_user
		where id=#{id};
	</select>
	
	<select id="getAllUser" resultMap="UserMap">
		select *
		from login_user
	</select>
	
	<update id="autoLogin">
		update login_user
		set session_id=#{sessionId}
			limit_date=#{limitDate}
		where id=#{id}
	</update>
	
	<select id="selectSession">
		select *
		from login_user
		where sessionId = #{sessionId}
	</select>
	
	
</mapper>